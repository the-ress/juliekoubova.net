{{> header.html }}

<section class="banner-container">
  
{{#each collections.posts}}

  <a class="banner" href="{{ this.path.href }}">
 
    <div class="banner-image">
      {{#if this.image}}
        <img src="{{ this.path.href }}{{ this.image }}" 
             width="200" 
             style="{{ or this.bannerStyle 'top: 0;' }}"
             alt="">
      {{/if}}
    </div>
      
    <time datetime="{{ iso8601 published }}">
      {{ moment published 'D. M. YYYY' }}
    </time>
    
    <h2>{{ or this.bannerTitle (or this.title this.path.href) }}</h2>
    
    <p>{{ this.description }}</p>
  </a>

{{/each}}

</section>

{{> footer.html }}